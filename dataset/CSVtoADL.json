{
	"name": "CSVtoADL",
	"properties": {
		"description": "will create the csv file and store it in the ADL",
		"linkedServiceName": {
			"referenceName": "weudevtanaadjunodatalake",
			"type": "LinkedServiceReference"
		},
		"annotations": [],
		"type": "DelimitedText",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"fileName": {
					"value": "@concat(pipeline().Pipeline, '_',\nformatDateTime(utcnow(), 'yyyy'),\nformatDateTime(utcnow(), 'MM'),\nformatDateTime(utcnow(), 'dd'))",
					"type": "Expression"
				},
				"folderPath": "Raw",
				"fileSystem": "atheon"
			},
			"columnDelimiter": "|",
			"escapeChar": "\\",
			"firstRowAsHeader": true,
			"quoteChar": "\""
		},
		"schema": []
	}
}